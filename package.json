{
  "name": "vs-code-ai-extension",
  "displayName": "VS Code AI (kontrollert)",
  "description": "Kontrollert AI-st√∏tte for kodearbeid",
  "version": "0.0.1",
  "publisher": "local",

  "engines": {
    "vscode": "^1.90.0"
  },

  "categories": ["Other"],

  "activationEvents": [
    "onCommand:vsCodeAI.start",
    "onCommand:vsCodeAI.explainSelection",
    "onCommand:vsCodeAI.explainActiveFile"
  ],

  "main": "./out/extension.js",

  "contributes": {
    "commands": [
      {
        "command": "vsCodeAI.start",
        "title": "VS Code AI: Start"
      },
      {
        "command": "vsCodeAI.explainSelection",
        "title": "VS Code AI: Forklar valgt kode"
      },
      {
        "command": "vsCodeAI.explainActiveFile",
        "title": "AI: Forklar aktiv kodefil"
      }
    ],

    "configuration": {
      "title": "VS Code AI",
      "properties": {
        "vsCodeAI.enableAI": {
          "type": "boolean",
          "default": false,
          "description": "Aktiver AI-forklaringer. Krever eksplisitt samtykke hver gang."
        },
        "vsCodeAI.adapter": {
          "type": "string",
          "default": "local",
          "enum": ["local", "remote"],
          "description": "Velg hvilken AI-adapter som skal brukes. 'remote' er ikke konfigurert og vil feile eksplisitt."
        }
      }
    }
  },

  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },

  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/vscode": "^1.90.0"
  }
}
